<title>{{ type }}</title>

<div id="clientKey" class="hidden">{{ clientKey }}</div>

<div class="status-container">
  <div class="status">
    <img src="/images/{{type}}.svg" class="status-image" alt="">

    {{#ifeq type "success" }}
    <img src="/images/thank-you.svg" class="status-image" alt="">
    {{/ifeq}}
    {{#ifeq type "pending" }}
    <img src="/images/thank-you.svg" class="status-image" alt="">
    {{/ifeq}}

    <p class="status-message">
      {{#ifeq type "success" }}
      Your order has been successfully placed.
      {{/ifeq}}
      {{#ifeq type "donated" }}
      Thank you for your donation!
      {{/ifeq}}
      {{#ifeq type "pending" }}
      Your order has been received! Payment completion pending.
      {{/ifeq}}
      {{#ifeq type "failed" }}
      The payment was refused. Please try a different payment method or card.
      {{/ifeq}}
      {{#ifeq type "error" }}
      Error! Please review response in console and refer to <a href="https://docs.adyen.com/development-resources/response-handling">Response handling.</a>
      {{/ifeq}}
    </p>

    <div id='donation-container'></div>
    {{#ifeq type "success" }}
    <div id="donation-container">
      <div id="donation" class="donation"></div>
    </div>
    {{/ifeq}}    

    <a class="button" href="/" to="#/">Return Home</a>
  </div>
</div>

{{#ifeq type "success" }}
<script type="text/javascript" src="../adyenDonationImplementation.js"></script>
{{/ifeq}}    
